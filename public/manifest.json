{
    "manifest_version": 3,
    "name": "Used Car Price Checker",
    "version": "0.1.0",
    "description": "Check used car prices on online marketplaces like Facebook Marketplace and Craigslist.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://*.facebook.com/marketplace/*",
        "*://*.craigslist.at/*",
        "*://*.craigslist.ca/*",
        "*://*.craigslist.ch/*",
        "*://*.craigslist.com/*",
        "*://*.craigslist.co.in/*",
        "*://*.craigslist.co.th/*",
        "*://*.craigslist.com.cn/*",
        "*://*.craigslist.com.mx/*",
        "*://*.craigslist.com.ph/*",
        "*://*.craigslist.co.uk/*",
        "*://*.craigslist.cz/*",
        "*://*.craigslist.de/*",
        "*://*.craigslist.co.za/*",
        "*://*.craigslist.es/*",
        "*://*.craigslist.fi/*",
        "*://*.craigslist.hk/*",
        "*://*.craigslist.it/*",
        "*://*.craigslist.jp/*",
        "*://*.craigslist.pt/*",
        "*://*.craigslist.tw/*",
        "*://*.craigslist.tr/*",
        "*://*.craigslist.org/*",
        "*://*.craigslist.pl/*"
    ],
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/marketplace/*",
                "*://*.craigslist.at/*",
                "*://*.craigslist.ca/*",
                "*://*.craigslist.ch/*",
                "*://*.craigslist.com/*",
                "*://*.craigslist.co.in/*",
                "*://*.craigslist.co.th/*",
                "*://*.craigslist.com.cn/*",
                "*://*.craigslist.com.mx/*",
                "*://*.craigslist.com.ph/*",
                "*://*.craigslist.co.uk/*",
                "*://*.craigslist.cz/*",
                "*://*.craigslist.de/*",
                "*://*.craigslist.co.za/*",
                "*://*.craigslist.es/*",
                "*://*.craigslist.fi/*",
                "*://*.craigslist.hk/*",
                "*://*.craigslist.it/*",
                "*://*.craigslist.jp/*",
                "*://*.craigslist.pt/*",
                "*://*.craigslist.tw/*",
                "*://*.craigslist.tr/*",
                "*://*.craigslist.org/*",
                "*://*.craigslist.pl/*"
                ],
            "js": ["scripts/content.js"],
            "css": ["shared.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/kbb-logo.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}