{
    "manifest_version": 3,
    "name": "Used Car Price Checker",
    "version": "0.1.0",
    "description": "Check used car prices on online marketplaces like Facebook Marketplace and Craigslist.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://*.facebook.com/marketplace/*",
        "*://*.craigslist.com/*"
    ],
    "options_ui": {
        "page": "src/options/index.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/marketplace/*", "*://*.craigslist.com/*"],
            "js": ["scripts/content.js"],
            "css": ["shared.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/kbb-logo.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}